<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<title>
			{% block title %}{% endblock %}
		</title>
	</head>
	<body>
		<p>
			There is the header: app logo and the buttons...
			{% if currentUser %}
				{% if currentUser.isAdmin %}
					&nbsp;
					<a href="users">users</a>
				{% endif %}
				&nbsp;
				<a href="profile">{{ currentUser.username }}</a>
				&nbsp;
				<a href="logout">logout</a>
			{% else %}
				&nbsp;
				<a href="login">login</a>
				&nbsp;
				<a href="signup">signup</a>
			{% endif %}
		</p>

		{% if old('errors') %}
			<ul>
				{% for error in old('errors') %}
					<li style="color: red">
						{{ error.message }}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		{% if old('infos') %}
			<ul>
				{% for info in old('infos') %}
					<li style="color: green">
						{{ info.message }}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		{% block content %}{% endblock %}
	</body>
</html>
