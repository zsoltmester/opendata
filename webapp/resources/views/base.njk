<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/sandstone/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<link href="/style.css" rel="stylesheet">
		<title>
			{% block title %}{% endblock %}
		</title>
	</head>
	<body>
		<p>
			There is the header: app logo and the buttons...
			{{ linkTo('main', 'Home') }}
			{% if currentUser %}
				&nbsp;
				{{ linkTo('add', 'Add') }}
				{% if currentUser.isAdmin %}
					&nbsp;
					{{ linkTo('users', 'Users')}}
				{% endif %}
				&nbsp;
				{{ linkTo('profile', currentUser.username) }}
				&nbsp;
				{{ linkTo('logout', 'Logout') }}
			{% else %}
				&nbsp;
				{{ linkTo('login', 'Login') }}
				&nbsp;
				{{ linkTo('signup', 'Signup') }}
			{% endif %}
		</p>

		{% if old('errors') %}
			<ul>
				{% for error in old('errors') %}
					<li style="color: red">
						{{ error.message }}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		{% if old('infos') %}
			<ul>
				{% for info in old('infos') %}
					<li style="color: green">
						{{ info.message }}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

		{% block content %}{% endblock %}
	</body>
</html>
