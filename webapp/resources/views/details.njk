{% extends 'base' %}

{% block title %}
	{{ dataset.summary }}
{% endblock %}

{% block content %}
	<strong>summary:</strong>
	{{ dataset.summary }}
	<br/>
	<strong>description:</strong>
	{{ dataset.description }}
	<br/>
	<strong>format:</strong>
	{{ dataset.format }}
	<br/>
	<strong>link:</strong>
	{{ dataset.link }}
	<br/>
	<strong>access:</strong>
	{{ dataset.access }}
	<br/>
	<strong>rate:</strong>
	{{ dataset.rate }}
	<br/>
	<strong>created_at:</strong>
	{{ dataset.created_at }}
	<br/>
	<strong>updated_at:</strong>
	{{ dataset.updated_at }}
	<br/>
	<strong>user_id:</strong>
	{{ dataset.user_id }}
	<br/>
	{% if currentUser.isAdmin or currentUser.id == dataset.user_id %}
		<a href={{ "/dataset/" + dataset.id + "/modify"}}>modify</a>
		<a href={{ "/dataset/" + dataset.id + "/delete"}}>delete</a>
	{% endif %}
	{% if reviews %}
		Reviews:
		{% for review in reviews %}
			<p>
				<strong>user_id:</strong>
				{{ review.user_id }}
				<br/>
				<strong>dataset_id:</strong>
				{{ review.dataset_id }}
				<br/>
				<strong>rate:</strong>
				{{ review.rate }}
				<br/>
				<strong>comment:</strong>
				{{ review.comment }}
				<br/>
				<strong>created_at:</strong>
				{{ review.created_at }}
				<br/>
				<strong>updated_at:</strong>
				{{ review.updated_at }}
				<br/>
			</p>
		{% endfor %}
	{% endif %}
{% endblock %}
