{% extends 'base' %}

{% block title %}
	Manage Users
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-2 col-lg-offset-5">
			<form class="form-horizontal" action="{{ 'deleteUsers' | route }}" method="POST">
				{{ csrfField }}
				<fieldset>

					<div class="form-group">
						<div class="col-lg-14">
							<table class="table table-striped table-hover text-center">

								<thead>
									<tr>
										<th class="text-center">Username</th>
										<th class="text-center">Email</th>
										<th class="text-center">Delete?</th>
									</tr>
								</thead>

								<tbody>
									{% for user in users %}
										<tr>
											<td>{{ user.username }}</td>
											<td>{{ user.email }}</td>
											{% if user.isAdmin %}
												<td>ADMIN</td>
											{% else %}
												<td>
													<input type="checkbox" id="inputDeleteUser" name={{user.id}}>
												</td>
											{% endif %}
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>

					<div class="form-group">
						<div class="col-lg-6 col-lg-offset-3">
							<button type="submit" class="btn btn-primary">Delete</button>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
{% endblock %}
