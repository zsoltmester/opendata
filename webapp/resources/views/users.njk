{% extends 'base' %}

{% block title %}
	Manage Users
{% endblock %}

{% block content %}
	<form class="form-horizontal" action="{{ 'deleteUsers' | route }}" method="POST">
		{{ csrfField }}
		<fieldset>

			<table class="table table-striped table-hover text-center">

				<thead>
					<tr>
						<th class="text-center">Username</th>
						<th class="text-center">Email</th>
						<th class="text-center">Delete?</th>
					</tr>
				</thead>

				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.username }}</td>
							<td>{{ user.email }}</td>
							{% if user.isAdmin %}
								<td>ADMIN</td>
							{% else %}
								<td>
									<input type="checkbox" id="inputDeleteUser" name="{{user.id}}">
								</td>
							{% endif %}
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<button type="submit" class="btn btn-primary pull-right">Delete</button>
		</div>
	</fieldset>
</form>
{% endblock %}
