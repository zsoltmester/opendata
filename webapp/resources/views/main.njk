{% extends 'base' %}

{% block title %}
	Open Data Hub
{% endblock %}

{% block content %}
	<ul class="list-group">
		{% for dataset in datasets %}
			<a href="{{ 'show' | route({id: dataset.id})}}" class="list-group-item">
				<span class="badge">{{ dataset.format }}</span>
				{{ dataset.summary }}
			</a>
		{% endfor %}
	</ul>
{% endblock %}
