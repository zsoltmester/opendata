{% extends 'base' %}

{% block title %}
	Profile
{% endblock %}

{% block content %}

	{% if old('errors') %}
		<ul>
			{% for error in old('errors') %}
				<li>
					{{ error.message }}
				</li>
			{% endfor %}
		</ul>
	{% endif %}

	{{ form.open({action: 'UserController.modify'}) }}

	{{ csrfField }}

	<fieldset class="form-group">
		{{ form.label('Username') }}
		{{ form.text('username', currentUser.username, { disabled:"disabled" }) }}
	</fieldset>

	<fieldset class="form-group">
		{{ form.label('Password') }}
		{{ form.password('password', null, {}) }}
	</fieldset>

	<fieldset class="form-group">
		{{ form.label('Email') }}
		{{ form.email('email', currentUser.email, {}) }}
	</fieldset>

	{{ form.submit('Modify', 'modify', {}) }}

	{{ form.close() }}
{% endblock %}
