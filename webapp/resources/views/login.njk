{% extends 'base' %}

{% block title %}
	Login
{% endblock %}

{% block content %}
	{{ form.open({action: 'UserController.login'}) }}

	{{ csrfField }}

	<fieldset class="form-group">
		{{ form.label('Username') }}
		{{ form.text('username', null, {}) }}
	</fieldset>

	<fieldset class="form-group">
		{{ form.label('Password') }}
		{{ form.password('password', null, {}) }}
	</fieldset>

	{{ form.submit('Login', 'login', {}) }}

	{{ form.close() }}
{% endblock %}
